	ldr r0,=mydata
	movs r1,#10 ;counter
	movs r2,#0 ;square
	movs r4,#0 ;result
loop
	ldr r2,[r0]
	muls r2,r2,r2
	add r4,r2
	adds r0,#4
	subs r1,#1
	beq Here

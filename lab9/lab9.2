		OpenKeyPad();
    Init_ADC(); 
    GPIO_SetMode(PC, BIT0, GPIO_MODE_INPUT); // set PC0 input for button
		
		for(i=0;i<snake_len;i++)
		{
			snake[i].x = 46-i*2;
			snake[i].y = 16;
			fill_Rectangle(snake[i].x,snake[i].y,snake[i].x+1,snake[i].y+1,FG_COLOR,BG_COLOR);
			//x0 y0 x1 y1
		}
		generate_food();
	
    while(1){
      //test();
			srand(counter++);
			update_direction();
			if((counter%mod) == 24)
			{
				move_snake();
			}
			
			switch(counter & 0x03)
			{
				case 0:
						show_7seg(0,score);
						break;
				case 1:
						show_7seg(1,score);
						break;
				case 2:
						show_7seg(2,score);
						break;
				case 3:
						show_7seg(3,score);
						break;
			}
			CLK_SysTickDelay(2000);//0.03
    }
}
